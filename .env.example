# Environment Variables
# Copy this file to .env.local and update with your actual values

# API Base URL
VITE_API_BASE_URL=http://localhost:3001

# App Configuration
VITE_APP_TITLE=React Boilerplate
VITE_APP_DESCRIPTION=A modern React application with authentication and state management

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_FILE_FORMATS=jpg,jpeg,png,gif,webp,pdf

# Development Configuration
VITE_ENABLE_REDUX_DEVTOOLS=true
